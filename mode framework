int mode;

int INTRO = 0;
int GAME = 1;
int PAUSE = 2;
int GAMEOVER = 3;

void setup(){
  size(800,800);
  mode = INTRO;
}

void draw(){
  if (mode == INTRO){
    intro();
  } else if (mode == GAME){
    game();
  } else if (mode == PAUSE){
    pause();
  } else if (mode == GAMEOVER){
    gameover();
  } else {
    println("Error: Mode = " + mode);
  }
}

void intro(){

}

void game(){

}
void pause(){

}
void gameover(){

}
